<%= render "shared/banner_for_show", path:@cocktail.url %>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Add a new dose</h3>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add the dose" %>
      <% end %>
    </div>
    <div class="col-md-3 col-md-offset-4">
      <h2>Doses</h2>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.description + " " + dose.ingredient.name %>
      <% end %>
    </div>
  </div>

</div>
<h3><%= link_to "Change the image", edit_cocktail_path(@cocktail) %></h3>




<%= link_to "Delete this cocktail", cocktail_path, method: :delete %>
